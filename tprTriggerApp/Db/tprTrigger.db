record(bo, "$(DEVICE):TRG$(NN):LCLS1ENABLE")
{
    field(DESC, "LCLS1 Trigger $(NN) Enable/Disable")
    field(DTYP, "asynInt32")
    field(OUT,  "@asyn($(PORT),0) trgEnable_T$(N)LCLS1")
    field(OMSL, "supervisory")
    field(ZNAM, "Disable")
    field(ONAM, "Enable")
    field(PINI, "YES")
    info(autosaveFields, "VAL")
}

